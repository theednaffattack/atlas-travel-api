{
  "name": "atlas-travel-api",
  "version": "1.0.0",
  "description": "An API for a fake travel website.",
  "main": "dist/index.js",
  "author": "Eddie Naff",
  "license": "MIT",
  "scripts": {
    "start": "node 'dist/server.js'",
    "build": "tsc -p . && ncp src/schema dist/schema",
    "lint": "eslint '*/**/*.{js,ts,tsx}' --quiet --fix",
    "start:dev": "npm run build:dev",
    "build:dev": "nodemon 'src/server.ts' --exec 'ts-node -r dotenv/config' src/server.ts -e ts,graphql"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": "config/cz-customizable.config.js"
    }
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "prettier/@typescript-eslint",
      "plugin:prettier/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "rules": {
      "no-shadow": "warn",
      "@typescript-eslint/explicit-member-accessibility": "off",
      "@typescript-eslint/explicit-function-return-type": "off",
      "@typescript-eslint/indent": "off",
      "@typescript-eslint/no-explicit-any": "off",
      "@typescript-eslint/no-non-null-assertion": "off",
      "@typescript-eslint/camelcase": "off",
      "@typescript-eslint/array-type": "off",
      "@typescript-eslint/no-object-literal-type-assertion": "off"
    }
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/compression": "^1.7.0",
    "@types/connect-redis": "^0.0.14",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.7",
    "@types/express-session": "^1.17.0",
    "@types/graphql": "^14.5.0",
    "@types/graphql-depth-limit": "^1.1.2",
    "@types/lodash": "^4.14.158",
    "@types/pg": "^7.14.4",
    "@typescript-eslint/eslint-plugin": "^3.8.0",
    "@typescript-eslint/parser": "^3.8.0",
    "bcrypt": "^5.0.0",
    "cz-customizable": "^6.3.0",
    "eslint": "^7.6.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7",
    "zapatos": "^0.1.52"
  },
  "dependencies": {
    "apollo-server-express": "^2.16.1",
    "colors": "^1.4.0",
    "compression": "^1.7.4",
    "connect-redis": "^5.0.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-session": "^1.17.1",
    "graphql": "^15.3.0",
    "graphql-depth-limit": "^1.1.0",
    "graphql-import-node": "^0.0.4",
    "graphql-tools": "^6.0.15",
    "http": "^0.0.1-security",
    "internal-ip": "^6.1.0",
    "ioredis": "^4.17.3",
    "lodash": "^4.17.19",
    "ncp": "^2.0.0",
    "pg": "^8.3.0",
    "sql-highlight": "https://github.com/theednaffattack/sql-highlight.git"
  }
}
